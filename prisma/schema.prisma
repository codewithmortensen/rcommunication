// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  employeeID String       @id @unique @db.Char(50)
  firstName  String       @db.Char(50)
  lastName   String       @db.Char(50)
  birthDate  DateTime
  gender     Gender
  phone      String       @db.Char(50)
  email      String       @db.Char(50)
  address    String       @db.Char(100)
  jobTile    String       @db.Char(50)
  status     String
  salary     Float
  dayOff     DayOff?
  startTime  DateTime
  endTime    DateTime
  Attendance Attendance[]
}

model Attendance {
  attendanceID       String         @id @unique
  employee           Employee       @relation(fields: [employeeEmployeeID], references: [employeeID])
  employeeEmployeeID String         @db.Char(50)
  entryTime          DateTime
  exitTime           DateTime?
  entryStatus        EntryStatus
  exitStatus         ExitStatus?
  workdayStatus      WorkdayStatus?
  currentDate        DateTime
}

enum Gender {
  Male
  Female
}

enum DayOff {
  Monday
  Tuesday
  Wednesday
  Thursday
  Friday
  Saturday
  Sunday
}

enum EntryStatus {
  On_Time
  Late
}

enum ExitStatus {
  Early
  On_Time
}

enum WorkdayStatus {
  Present
  Absent
}
